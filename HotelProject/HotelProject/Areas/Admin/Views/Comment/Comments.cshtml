@model List<RoomComment>
@{
    ViewData["Title"] = "Comments";
}

<div class="d-flex flex-column">
    <h1>Comments</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    id
                </th>
                <th>
                    Room Name
                </th>
                <th>
                    User Name
                </th>
                <th>
                    Text
                </th>
                <th>
                    Buttons
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Room.Name
                    </td>
                    <td>
                        @item.user.UserName
                    </td>
                    <td>
                        @item.Text
                    </td>
                    <td>
                        <a asp-controller="Comment" asp-action="EditComment" asp-route-id="@item.Id" class="btn btn-primary" >Edit</a>
                        <a asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@item.Id" class="btn btn-danger" >Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
