@model List<Reservations>
@{
    ViewData["Title"] = "Index";
}



<div class="d-flex flex-column">
    <h1>Index</h1>
    <table class="table table-stripped table-dark">
        <thead>
            <tr>
                <th>Check In</th>
                <th>Room Name</th>
                <th>Check Out</th>
                <th>Email</th>

                <th>#</th>
                <th>Buttons</th>





            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>

                    <td>@item.CheckInDate</td>
                    <td>@item.Room.Name</td>
                    <td>@item.CheckOutDate</td>
                    <td>@item.User.Email</td>
                    <td>@item.Id</td>


                    <td>
                        <a asp-controller="Rezervation" asp-action="EditRezervation" asp-route-id="@item.Id">
                            <button class="btn btn-primary btn-sm">Edit</button>
                        </a>
                        <a class="btn btn-danger btn-sm" asp-controller="Rezervation" asp-action="DeleteRezervation" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
}
        </tbody>
    </table>
</div>
