@model Hotel
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-column">
    <h1>@Model.Name</h1>
    <img class="rounded" style="width:100%;height:250px;object-fit:cover;object-position:center;" src="~/img/@Model.Photo" alt="Alternate Text" />
    @if (Model.Rooms.Count > 0)
    {
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Desc</th>

                    <th>Adult bed count</th>
                    <th>Child bed count</th>
                    <th>Nightly price</th>
                    <th>Buttons</th>





                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Rooms)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            <img src="~/img/@item.RoomPhotos[0].Photo" alt="Alternate Text" />
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Desc
                        </td>

                        <td>
                            @item.AdultBedCount
                        </td>
                        <td>
                            @item.ChildBedCount
                        </td>
                        <td>
                            @item.NightlyPrice
                        </td>
                        <td>
                            <a asp-controller="Room" asp-action="Edit" asp-route-id="@item.Id"> <button class="btn btn-primary">Edit</button></a>

                            <a asp-controller="Room" asp-action="Delete" asp-route-id="@item.Id">  <button class="btn btn-danger">Delete</button></a>

                        </td>


                    </tr>
                }

            </tbody>
        </table>
    }
    <a asp-controller="Room" asp-action="AddRoom" asp-route-id="@Model.Id">
        <button class="btn btn-primary">Add Room</button>
    </a>

    <a asp-controller="Hotel" asp-action="UpdateHotel" asp-route-id="@Model.Id">
        <button class="btn btn-primary">Update Hotel</button>
    </a>

</div>


